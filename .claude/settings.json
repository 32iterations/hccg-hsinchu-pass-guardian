{
  "includeCoAuthoredBy": false,
  "permissions": {
    "deny": [
      "Edit(./CLAUDE.md)",
      "Edit(./.policy/**)",
      "Bash(rm -rf /)",
      "Read(./.env)",
      "Read(./secrets/**)"
    ],
    "allow": [
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(npm run test*)",
      "Bash(yarn test*)",
      "Bash(pnpm test*)",
      "Bash(./gradlew test*)",
      "Bash(xcodebuild test*)"
    ],
    "ask": [
      "Bash(git push:*)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/block-policy-edits.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/tdd-guard.sh"
          }
        ]
      }
    ]
  }
}