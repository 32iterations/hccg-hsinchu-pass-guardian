{
  "name": "hccg-hsinchu-pass-guardian-backend",
  "version": "1.0.0",
  "description": "Backend services for Hsinchu Pass Guardian - Safety monitoring system",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit",
    "security:check": "audit-ci --config audit-ci.json",
    "build": "npm run lint && npm run test",
    "start:services": "node services/safety/index.js",
    "health-check": "node scripts/health-check.js"
  },
  "keywords": [
    "safety",
    "guardian",
    "missing-person",
    "geofence",
    "volunteer",
    "mydata",
    "hsinchu"
  ],
  "author": "Hsinchu City Government",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "ws": "^8.14.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "axios": "^1.6.2",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "mongoose": "^8.0.3",
    "redis": "^4.6.10",
    "bullmq": "^4.15.1",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "crypto": "^1.0.1",
    "rate-limiter-flexible": "^4.0.1",
    "express-validator": "^7.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-security": "^1.7.1",
    "audit-ci": "^6.6.1",
    "@types/jest": "^29.5.8",
    "mongodb-memory-server": "^9.1.3",
    "redis-memory-server": "^0.7.0",
    "nock": "^13.4.0",
    "faker": "^6.6.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "services/**/*.js",
      "!services/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:jest/recommended",
      "plugin:security/recommended"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "security/detect-object-injection": "off",
      "security/detect-non-literal-fs-filename": "off"
    }
  }
}