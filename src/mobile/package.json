{
  "name": "hsinchu-pass-guardian-mobile",
  "version": "1.0.0",
  "description": "新竹市政府安心守護功能 - 失智症患者定位守護服務 Mobile App",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "detox test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace HsinchuPassGuardian.xcworkspace -scheme HsinchuPassGuardian -configuration Release"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.73.2",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "react-native-screens": "^3.25.0",
    "react-native-safe-area-context": "^4.7.2",
    "react-native-ble-manager": "^10.1.2",
    "react-native-bluetooth-state-manager": "^1.0.3",
    "@react-native-community/geolocation": "^3.0.6",
    "react-native-background-job": "^1.3.1",
    "react-native-permissions": "^3.8.4",
    "react-native-push-notification": "^8.1.1",
    "@react-native-async-storage/async-storage": "^1.19.3",
    "react-native-keychain": "^8.1.2",
    "react-native-device-info": "^10.9.0",
    "react-native-vector-icons": "^10.0.0",
    "react-native-config": "^1.5.1",
    "@react-native-community/netinfo": "^9.4.1",
    "react-native-crypto-js": "^1.0.0",
    "react-native-uuid": "^2.0.1",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.73.1",
    "@react-native/metro-config": "^0.73.2",
    "@react-native/typescript-config": "^0.73.1",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.77.0",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4",
    "@testing-library/react-native": "^12.3.2",
    "@testing-library/jest-native": "^5.4.2",
    "detox": "^20.13.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect",
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 90,
        "statements": 90
      }
    }
  }
}